//Program Desc: C program to find the sum of digits of a given number

#include <stdio.h>
int main()
{
   int n=0,sum=0,rem=0;
   printf("enter a number: ");
   scanf("%d",&n);
   while(n>0)
   {
       rem=n%10;
       sum=sum+rem;
       n=n/10;
   }
   printf("the sum of digits of the given number is: %d",sum);
}
